						<li class="menu_social_item menu_mm"><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
						<li class="menu_social_item menu_mm"><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
						<li class="menu_social_item menu_mm"><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
						<li class="menu_social_item menu_mm"><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
					</ul>
				</div>

				<div class="menu_copyright menu_mm">Colorlib All rights reserved</div>
			</div>

		</div>

	</div>
	
	<!-- Home -->

	<div class="home">
		<!-- Image by https://unsplash.com/@peecho -->
		<div class="home_background parallax-window" data-parallax="scroll" data-image-src="{{asset('front/')}}images/offers.jpg" data-speed="0.8"></div>
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="home_content">
						<div class="home_content_inner">
							<div class="home_title">Hotels</div>
							<div class="home_breadcrumbs">
								<ul class="home_breadcrumbs_list">
									<li class="home_breadcrumb"><a href="{{ path('frontend_homepage') }}">Home</a></li>
									<li class="home_breadcrumb">Hotels</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>		
	</div>

	<!-- Find Form -->

	<div class="find" style="margin-top:  20px;">
		<!-- Image by https://unsplash.com/@garciasaldana_ -->
		<div class="find_background parallax-window" data-parallax="scroll" data-image-src="{{asset('front/')}}images/find.jpg" data-speed="0.8"></div>
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="find_title text-center">Find the Adventure of a lifetime</div>
				</div>
				<div class="col-12">
					<div class="find_form_container">
						<form action="{{path('search')}}" id="find_form" class="find_form d-flex flex-md-row flex-column align-items-md-center align-items-start justify-content-md-between justify-content-start flex-wrap">
							<div class="find_item">
								<div>Destination:</div>
								<input type="text" name="destination" class="destination find_input" required="required" placeholder="Keyword here">
							</div>
							<div class="find_item">
								<div>Type Aventure:</div>
								<select name="adventure" id="adventure" class="dropdown_item_select find_input">
									<option>Hotels</option>
									<option>Excursions</option>
									<option>Circuits</option>
								</select>
							</div>
							 
							<div class="find_item">
								<div>Max prix</div>
								<select name="maxPrix" id="max_price" class="dropdown_item_select find_input">
									<option>&nbsp;</option>
 									<option>40</option>
									<option>50</option>
									<option>60</option>
									<option>70</option>
									<option>80</option>
									<option>90</option>
									<option>100</option>


								</select>
							</div>
							<button class="button find_button">Chercher</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Hotels -->

	<div class="offers">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<h2>Top destinations  {{destination}}</h2>
						<div>take a look at these offers</div>
					</div>
				</div>
			</div>
			<div class="row filtering_row">
				<div class="col">
					<div class="sorting_group_1">
						<ul class="item_sorting">
							<li>
								<span class="sorting_text">Filter by</span>
 								
							</li>
							<li>
								<span class="sorting_text">Stars</span>
								<i class="fa fa-angle-down"></i>
								<ul>
									<li class="item_filter_btn" data-filter="*"><span>Show All</span></li>
									<li class="item_sorting_btn" data-isotope-option='{ "sortBy": "stars" }'><span>Ascending</span></li>
									<li class="item_filter_btn" data-filter=".rating_1"><span>1</span></li>
									<li class="item_filter_btn" data-filter=".rating_2"><span>2</span></li>
									<li class="item_filter_btn" data-filter=".rating_3"><span>3</span></li>
									<li class="item_filter_btn" data-filter=".rating_4"><span>4</span></li>
									<li class="item_filter_btn" data-filter=".rating_5"><span>5</span></li>
								</ul>
							</li>
							 
							 
						</ul>
					</div>
					<div class="sorting_group_2 clearfix">
						 
						<div class="sorting_icons clearfix">
							<div class="detail_view"><i class="fa fa-bars" aria-hidden="true"></i></div>
							<div class="box_view"><i class="fa fa-th-large" aria-hidden="true"></i></div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col" style="border: 3px solid #80808042;">
					<div class="items item_grid clearfix">
				
						{% for hotel in hotels if( maxPrix == '0' or  hotel.tariLpd <= maxPrix) %}

						<!-- Item -->
						<div class="item clearfix rating_5">
							<div class="item_image">
 								<img style="height: 250px; width:150px;" src="{{app.request.basepath}}/uploads/images/{{ hotel.image }}" />
							</div>
							<div class="item_content">
								<div class="item_price">From {{hotel.tariLpd}} Dt</div>
								<div class="item_title">Tunisie, {{hotel.ville}}</div>
								<ul>
									<li>1 person</li>
									<li>4 nights</li>
									<li>{{hotel.nbrEtoile|number_format}} star hotel</li>
								</ul>
								<div class="rating rating_5" data-rating="5">
									
									 
									{% for i in 0..hotel.nbrEtoile|number_format %}
										<i class="fa fa-star"></i>
									{% endfor %}
								</div>
								<div class="item_text">
									{{ hotel.adresse}}
								</div>
								<div class="item_more_link">
									<a href="{{path('reservation_new',{'id':hotel.id, 'type':'hotel' })}}" class="btn btn-warning" type="submit">Réserver</a>
 								</div>
							</div>
						</div>

						{% else %}
							<div style="background-color: #ff00003b; width: 100%; margin: 20px; padding: 20px;border-radius: 10px;">Aucun offres est trouvé.</div>
	 					{%  endfor %}

					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="pages">
						<ul class="pages_list">
							<li class="page active"><a href="#">01.</a></li>
							<li class="page"><a href="#">02.</a></li>
							<li class="page"><a href="#">03.</a></li>
							<li class="page"><a href="#">04.</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	 
