						<!-- Logo -->
						<div class="logo_container">
							<div class="logo">
								<div>destino</div>
								<div>travel agency</div>
								<div class="logo_image"><img src="{{asset('front/')}}images/logo.png" alt=""></div>
							</div>
						</div>

						<!-- Main Navigation -->
						<nav class="main_nav ml-auto">
							<ul class="main_nav_list">
								
	                        	{% block activeHotel %}
	                        		<li class="main_nav_item active">
									<a href="{{ path('offres_Hotels') }}">Hotels</a>
									</li>
								{% endblock %}
								{% block activeExcursion %}
	                        		<li class="main_nav_item">
										<a href="{{ path('offres_Excursions') }}">Rondonnées</a>
									</li>
								{% endblock %}
 								<li class="main_nav_item"><a href="news.html">Promotions</a></li>
								<li class="main_nav_item"><a href="contact.html">Circuits</a></li>
								<li class="main_nav_item"><a href="contact.html">Contact</a></li>
								{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			                       
			                        	{% block activeMesReservation %}
			                        	 <li class="main_nav_item ">
			                        		<a href="{{ path('mesReservations', {'id': app.user.id} ) }}">Mes réservations</a>
 			                        	 </li>
			                        	{% endblock %}	                        	
			                       
			                    {% endif %}
							</ul>
						
						</nav>

						<!-- Search -->
						<div class="search">
							<form action="#" class="search_form">
								{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
									{% if is_granted('ROLE_ADMIN') %}
										<a href="{{ path('admin_homepage') }}"  target="_blank" class="search_input ctrl_class" style="padding: 5px;">Espace Admin</a>
									{% else %}
										<a href="{{ path('fos_user_security_logout') }}"  class="search_input ctrl_class" style="padding: 5px;">Déconnexion</a>
									{% endif %}

								
								{% else %}
									<a href="{{ path('admin_homepage') }}"  class="search_input ctrl_class" style="padding: 5px;">Espace Administration</a>

								{% endif %}
 								
								<button type="submit" class="search_button ml-auto ctrl_class">
									<img style=" width: 52px; margin-left: -16px; margin-top: -19px;" src="{{asset('front/')}}images/user-admin.PNG" alt="">
 								</button>
							</form>
						</div>

						<!-- Hamburger -->
						<div class="hamburger ml-auto"><i class="fa fa-bars" aria-hidden="true"></i></div>

					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- Menu -->

	<div class="menu_container menu_mm">

		<!-- Menu Close Button -->
		<div class="menu_close_container">
			<div class="menu_close"></div>
		</div>

		<!-- Menu Items -->
		<div class="menu_inner menu_mm">
